<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
        <% if current_user.admin? || current_user?(@user)
	   pronoun = current_user?(@user) ? "my" : "their" %>
        | <%= link_to "delete #{pronoun} account", @user, method: :delete, data: { confirm: 'are you sure?' } %>
        <% end %>
      </h1>
    </section>
  </aside>
  <section class="feeds">
    <ul class="root-list">
    <% nodes = @user.nodes.select{|x| x.parent.nil? }
    nodes.each do |node| %>
      <%= dump_the_list(node) %>
    <% end %>
    </ul>
  </section>
</div>
