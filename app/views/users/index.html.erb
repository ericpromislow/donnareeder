<% provide(:title, 'all the users') %>
<h1>Users:</h1>
<%= will_paginate %>
<ul class="users">
  <% @users.each_with_index do |user, index| %>
    <li>
      <%= item_num(@users, index + 1) %>: <%= link_to user.name, user %>
      | <%= user.activated? %>
      <% if current_user.admin? && !current_user?(user) %>
        | <%= link_to 'delete', user, method: :delete, data: { confirm: 'are you sure?' } %>
      <% end %>
    </li>
  <% end %>
</ul>
<%= will_paginate %>
